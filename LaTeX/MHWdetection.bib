doi = {10.1016/j.jembe.2011.02.021},
isbn = {0022-0981},
issn = {00220981},
journal = {Journal of Experimental Marine Biology and Ecology},
keywords = {Climate impacts,Community ecology,Global warming,Macroalgae,Multiple stressors,Phase shift,Range contraction,Range extension,Trophodynamics},
number = {1-2},
pages = {7--16},
title = {{Impacts of climate change in a global hotspot for temperate marine biodiversity and ocean warming}},
volume = {400},
